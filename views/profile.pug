    .profile-container
      .profile-photo
        input(type="file", id="photo-upload", accept="image/*", onchange="loadFile(event)")
        img(id="profile-pic", src="", alt="Profile Picture", style="width: 100%; height: 100%; display: none;")
        label(for="photo-upload", style="cursor: pointer; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; background-color: rgba(255, 255, 255, 0.5);") Upload Photo
      .profile-details
        h2 User Details
        p Name: 
          span(id="user-name") #{user.name}  // Display user name
        p Email: 
          span(id="user-email") #{user.email}  // Display user email
        .button-container
          button(onclick="openModal('createModal')") Create
          button(onclick="openModal('updateModal')") Update
          button(onclick="openModal('deleteModal')") Delete
          button(onclick="readUser()") Read

    // Create Modal
    #createModal.modal
      .modal-content
        span.close(onclick="closeModal('createModal')") &times;
        h2 Create User
        input(type="text", id="create-name", placeholder="Enter Name", required)
        input(type="email", id="create-email", placeholder="Enter Email", required)
        button(onclick="createUser()") Create User

    // Update Modal
    #updateModal.modal
      .modal-content
        span.close(onclick="closeModal('updateModal')") &times;
        h2 Update User
        input(type="text", id="update-name", placeholder="Enter New Name", required)
        input(type="email", id="update-email", placeholder="Enter New Email", required)
        button(onclick="updateUser()") Update User

    // Delete Modal
    #deleteModal.modal
      .modal-content
        span.close(onclick="closeModal('deleteModal')") &times;
        h2 Delete User
        p Are you sure you want to delete this user?
        button(onclick="deleteUser()") Delete User

        footer
